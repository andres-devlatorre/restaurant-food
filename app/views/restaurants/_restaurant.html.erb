<div class="container d-flex justify-content-between align-items-center border p2">
  <%= restaurant.name %>
  <div class="p-1">
    <%= link_to restaurant_path(restaurant), data: {turbo_method: :delete}, class: "btn btn-danger" do %>
    <i class="fa-solid fa-trash"></i>
    <% end %>
    <%= link_to edit_restaurant_path(restaurant), class: "btn btn-warning" do %>
    <i class="fa-solid fa-pencil"></i>
    <% end %>
  </div>
</div>
